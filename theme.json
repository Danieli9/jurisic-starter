{
  "$schema": "https://schemas.wp.org/wp/6.5/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        { "slug": "base", "name": "Base", "color": "#f4f4f5" },
        { "slug": "accent", "name": "Accent", "color": "#1d4ed8" },
        { "slug": "neutral", "name": "Neutral", "color": "#1f2937" }
      ],
      "gradients": []
    },
    "custom": {
      "layout": {
        "contentSize": "700px",
        "wideSize": "1200px"
      }
    },
    "layout": {
      "wideSize": "1200px",
      "contentSize": "700px"
    },
    "spacing": {
      "units": ["px", "em", "rem", "%", "vh", "vw"],
      "spacingScale": {
        "step": 0,
        "medium": "1.5rem"
      }
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Inter, system-ui, -apple-system, BlinkMacSystemFont, \\"Segoe UI\\", sans-serif",
          "name": "Inter",
          "slug": "inter"
        }
      ],
      "fontSizes": [
        { "name": "Small", "slug": "small", "size": "0.875rem" },
        { "name": "Normal", "slug": "normal", "size": "1rem" },
        { "name": "Large", "slug": "large", "size": "1.5rem" },
        { "name": "XL", "slug": "xl", "size": "2rem" }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--neutral)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.6"
    }
  },
  "templateParts": [
    { "name": "header", "title": "Header", "area": "header" },
    { "name": "footer", "title": "Footer", "area": "footer" }
  ],
  "templates": {
    "front-page": {
      "title": "Front Page"
    },
    "single": {
      "title": "Single"
    },
    "archive": {
      "title": "Archive"
    }
  }
}

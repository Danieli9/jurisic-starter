{
  "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "color": {
      "palette": [
        { "slug": "base", "name": "Base", "color": "#f4f4f5" },
        { "slug": "accent", "name": "Accent", "color": "#1d4ed8" },
        { "slug": "neutral", "name": "Neutral", "color": "#1f2937" }
      ],
      "gradients": []
    },
    "layout": {
      "wideSize": "1200px",
      "contentSize": "700px",
      "allowEditing": true
    },
    "spacing": {
      "units": ["px", "em", "rem", "%", "vh", "vw"],
      "defaultSpacingSizes": false,
      "spacingSizes": [
        { "slug": "20", "size": "0.75rem", "label": "XS" },
        { "slug": "40", "size": "1.5rem", "label": "S" },
        { "slug": "50", "size": "2.25rem", "label": "SM" },
        { "slug": "60", "size": "3rem", "label": "M" },
        { "slug": "80", "size": "4.5rem", "label": "L" }
      ]
    },
    "typography": {
      "fluid": true,
      "fontFamilies": [
        {
          "fontFamily": "Inter, system-ui, -apple-system, BlinkMacSystemFont, \"Segoe UI\", sans-serif",
          "name": "Inter",
          "slug": "inter"
        }
      ],
      "fontSizes": [
        { "name": "Small", "slug": "small", "size": "0.875rem" },
        { "name": "Normal", "slug": "normal", "size": "1rem" },
        { "name": "Large", "slug": "large", "size": "1.5rem" },
        { "name": "XL", "slug": "xl", "size": "2rem" }
      ]
    }
  },
  "styles": {
    "layout": {
      "contentSize": "700px",
      "wideSize": "1200px"
    },
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--neutral)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.6"
    }
  },
  "templateParts": [
    { "name": "header", "title": "Header", "area": "header" },
    { "name": "footer", "title": "Footer", "area": "footer" }
  ],
  "templates": {
    "index": {
      "title": "Index"
    },
    "home": {
      "title": "Blog Home"
    },
    "front-page": {
      "title": "Front Page"
    },
    "single": {
      "title": "Single"
    },
    "archive": {
      "title": "Archive"
    },
    "page": {
      "title": "Page"
    },
    "404": {
      "title": "404"
    }
  }
}
